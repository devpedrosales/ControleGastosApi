
@page
@model IndexModel
@{
    ViewData["Title"] = "Extrato";
}

<div class="text-center">
    <h1 class="display-4">Meu Extrato 💰</h1>
</div>

<div class="row mb-4 mt-4">
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3 shadow-sm">
            <div class="card-header">Entradas</div>
            <div class="card-body">
                <h3 class="card-title">R$ @Model.Resumo.receitas.ToString("N2")</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-danger mb-3 shadow-sm">
            <div class="card-header">Saídas</div>
            <div class="card-body">
                <h3 class="card-title">R$ @Model.Resumo.despesas.ToString("N2")</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3 shadow-sm">
            <div class="card-header">Saldo Atual</div>
            <div class="card-body">
                <h3 class="card-title">R$ @Model.Resumo.saldo.ToString("N2")</h3>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="Criar" class="btn btn-primary">
        + Nova Transação
    </a>
</div>

<table class="table table-striped mt-4 shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Data</th>
            <th>Categoria</th>
            <th>Descrição</th>
            <th class="text-end">Valor</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Transacoes)
        {
            <tr>
                <td>@item.Data.ToString("dd/MM/yyyy")</td>
                <td><span>@item.Categoria?.Icone</span> @item.Categoria?.Nome</td>
                <td>@item.Titulo</td>

                <td class="text-end" style="color: @(item.Tipo == 1 ? "#dc3545" : "#198754"); font-weight: bold;">
                    @if (item.Tipo == 1)
                    {
                        <span>-</span>
                    }
                    R$ @item.Valor.ToString("N2")
                </td>

                <td>
                    <form method="post" asp-page-handler="Deletar" asp-route-id="@item.Id" onsubmit="return confirm('Tem certeza que deseja excluir este item?');">
                        <button type="submit" class="btn btn-danger btn-sm" title="Excluir">
                            🗑️
                        </button>
                    </form>
                </td>
            </tr>
        }
        
        @if (!Model.Transacoes.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    Nenhuma transação encontrada.
                </td>
            </tr>
        }
    </tbody>
</table>