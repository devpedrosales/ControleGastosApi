@page
@model ControleGastosWeb.Pages.CriarModel
@{
    ViewData["Title"] = "Nova Transação";
}

<div class="container mt-4">
    <h2>📝 Nova Transação</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">

                <div class="mb-3">
                    <label class="form-label">Descrição</label>
                    <input asp-for="Transacao.Titulo" class="form-control" placeholder="Ex: Burguer King" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Valor (R$)</label>
                    <input asp-for="Transacao.Valor" class="form-control" type="number" step="0.01" placeholder="0,00" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Tipo</label>
                    <select asp-for="Transacao.Tipo" class="form-select">
                        <option value="1">Despesa (Vermelho)</option>
                        <option value="0">Receita (Verde)</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Categoria</label>
                    <select asp-for="Transacao.CategoriaId" class="form-select" required>
                        <option value="">Selecione uma categoria...</option>
                        @foreach (var cat in Model.ListaCategorias)
                        {
                            <option value="@cat.Id">@cat.Icone @cat.Nome</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Data</label>
                    <input asp-for="Transacao.Data" class="form-control" type="date" />
                </div>

                <button type="submit" class="btn btn-success w-100">Salvar Transação</button>
                <a asp-page="Index" class="btn btn-secondary w-100 mt-2">Voltar</a>

            </form>
        </div>
    </div>
</div>